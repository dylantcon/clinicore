<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:GUI.CliniCore.ViewModels.Physicians"
             xmlns:domain="clr-namespace:Core.CliniCore.Domain.Users.Concrete;assembly=Core.CliniCore"
             xmlns:icons="clr-namespace:GUI.CliniCore.Resources.Fonts"
             x:Class="GUI.CliniCore.Views.Physicians.PhysicianDetailPage"
             x:DataType="viewModels:PhysicianDetailViewModel"
             Title="{Binding Title}">

    <!-- Configure Shell back button to trigger Back command -->
    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding BackCommand}"/>
    </Shell.BackButtonBehavior>

    <ScrollView Padding="15">
        <VerticalStackLayout Spacing="15">

            <!-- Physician Name Header -->
            <Border Stroke="#2196F3" StrokeThickness="2" Background="#E3F2FD" StrokeShape="RoundRectangle 12" Padding="20">
                <VerticalStackLayout Spacing="5">
                    <Label FontSize="26" FontAttributes="Bold">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Dr. " TextColor="#2196F3"/>
                                <Span Text="{Binding PhysicianName}" TextColor="#2196F3"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Label Text="{Binding Username, StringFormat='@{0}'}"
                           FontSize="14"
                           TextColor="Gray"/>
                </VerticalStackLayout>
            </Border>

            <!-- Professional Details Section -->
            <Label Text="Professional Details" FontSize="18" FontAttributes="Bold" Margin="0,10,0,5"/>

            <Border Stroke="LightGray" StrokeThickness="1" Background="White" StrokeShape="RoundRectangle 8" Padding="15">
                <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="140,*" RowSpacing="10">

                    <!-- License Number -->
                    <Label Grid.Row="0" Grid.Column="0" Text="License Number:" FontAttributes="Bold" TextColor="#666"/>
                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding LicenseNumber}" TextColor="#333"/>

                    <!-- Graduation Date -->
                    <Label Grid.Row="1" Grid.Column="0" Text="Graduation Date:" FontAttributes="Bold" TextColor="#666"/>
                    <Label Grid.Row="1" Grid.Column="1" Text="{Binding GraduationDate}" TextColor="#333"/>

                    <!-- Specializations -->
                    <Label Grid.Row="2" Grid.Column="0" Text="Specializations:" FontAttributes="Bold" TextColor="#666"/>
                    <Label Grid.Row="2" Grid.Column="1" Text="{Binding Specializations}" TextColor="#2196F3" LineBreakMode="WordWrap"/>

                </Grid>
            </Border>

            <!-- Practice Summary -->
            <Label Text="Practice Summary" FontSize="18" FontAttributes="Bold" Margin="0,10,0,5"/>

            <Border Stroke="LightGray" StrokeThickness="1" Background="White" StrokeShape="RoundRectangle 8" Padding="15">
                <VerticalStackLayout Spacing="12">

                    <!-- Patients -->
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="{x:Static icons:MaterialIcons.Group}"
                               FontFamily="MaterialIconsRegular"
                               FontSize="20"
                               TextColor="#4CAF50"
                               VerticalOptions="Center"/>
                        <Label FontSize="14" TextColor="#333" VerticalOptions="Center">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{Binding PatientCount}" FontAttributes="Bold"/>
                                    <Span Text=" Patients"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </HorizontalStackLayout>

                    <!-- Appointments -->
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="{x:Static icons:MaterialIcons.CalendarToday}"
                               FontFamily="MaterialIconsRegular"
                               FontSize="20"
                               TextColor="#2196F3"
                               VerticalOptions="Center"/>
                        <Label FontSize="14" TextColor="#333" VerticalOptions="Center">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{Binding AppointmentCount}" FontAttributes="Bold"/>
                                    <Span Text=" Appointments"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </HorizontalStackLayout>

                    <!-- Navigation Actions -->
                    <BoxView HeightRequest="1" Color="LightGray" Margin="0,10,0,5"/>

                    <Button Text="View Patients"
                            Command="{Binding ViewPatientsCommand}"
                            BackgroundColor="#4CAF50"
                            TextColor="White"
                            CornerRadius="8"
                            HeightRequest="40"
                            IsVisible="{Binding CanViewPatients}"/>

                </VerticalStackLayout>
            </Border>

            <!-- Action Buttons -->
            <VerticalStackLayout Spacing="10" Margin="0,20,0,0">

                <Button Text="Edit Physician"
                        Command="{Binding EditPhysicianCommand}"
                        BackgroundColor="#FF9800"
                        TextColor="White"
                        CornerRadius="8"
                        HeightRequest="50"
                        IsVisible="{Binding CanEditPhysician}"/>

                <Button Text="Delete Physician"
                        Command="{Binding DeletePhysicianCommand}"
                        BackgroundColor="#F44336"
                        TextColor="White"
                        CornerRadius="8"
                        HeightRequest="50"
                        IsVisible="{Binding CanDeletePhysician}"/>

                <Button Text="Back to List"
                        Command="{Binding BackCommand}"
                        BackgroundColor="#607D8B"
                        TextColor="White"
                        CornerRadius="8"
                        HeightRequest="50"/>

            </VerticalStackLayout>

            <!-- Validation Errors -->
            <CollectionView ItemsSource="{Binding ValidationErrors}"
                           IsVisible="{Binding HasValidationErrors}"
                           Margin="0,10,0,0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="#F44336"
                                StrokeThickness="1"
                                Background="#FFEBEE"
                                StrokeShape="RoundRectangle 8"
                                Padding="10"
                                Margin="0,2">
                            <Label Text="{Binding .}"
                                   TextColor="#D32F2F"
                                   FontSize="12"/>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
