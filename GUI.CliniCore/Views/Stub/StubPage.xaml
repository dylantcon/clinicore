<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:GUI.CliniCore.ViewModels.Stub"
             xmlns:icons="clr-namespace:GUI.CliniCore.Resources.Fonts"
             x:Class="GUI.CliniCore.Views.Stub.StubPage"
             x:DataType="viewModels:StubViewModel"
             Title="{Binding Title}">

    <ScrollView Padding="20">
        <VerticalStackLayout Spacing="20" MaximumWidthRequest="800" HorizontalOptions="Center">

            <!-- Icon and Title -->
            <VerticalStackLayout Spacing="15" HorizontalOptions="Center">
                <Label Text="{Binding Icon}"
                       FontFamily="MaterialIconsRegular"
                       FontSize="80"
                       HorizontalOptions="Center"
                       TextColor="#FF9800"/>
                <Label Text="{Binding FeatureName}"
                       FontSize="28"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="#333"/>
            </VerticalStackLayout>

            <!-- Information Card -->
            <Border Stroke="#FF9800"
                    StrokeThickness="2"
                    Background="#FFF3E0"
                    StrokeShape="RoundRectangle 12"
                    Padding="25">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Feature Status"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#E65100"/>

                    <Label Text="{Binding Description}"
                           FontSize="14"
                           TextColor="#555"
                           LineBreakMode="WordWrap"/>

                    <BoxView HeightRequest="1" Color="#FFB74D" Margin="0,10"/>

                    <Label Text="{Binding Reason}"
                           FontSize="13"
                           TextColor="#666"
                           FontAttributes="Italic"
                           LineBreakMode="WordWrap"/>
                </VerticalStackLayout>
            </Border>

            <!-- Implementation Note -->
            <Border Stroke="LightGray"
                    StrokeThickness="1"
                    Background="White"
                    StrokeShape="RoundRectangle 8"
                    Padding="20">
                <VerticalStackLayout Spacing="10">
                    <HorizontalStackLayout Spacing="6">
                        <Label Text="{x:Static icons:MaterialIcons.Info}"
                               FontFamily="MaterialIconsRegular"
                               FontSize="16"
                               TextColor="#333"
                               VerticalOptions="Center"/>
                        <Label Text="Implementation Note"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#333"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                    <Label Text="This feature is planned for future implementations of the CliniCore architecture. The current version focuses on core clinical documentation, scheduling, and patient management workflows."
                           FontSize="12"
                           TextColor="#666"
                           LineBreakMode="WordWrap"/>
                </VerticalStackLayout>
            </Border>

            <!-- Back Button -->
            <Border BackgroundColor="#607D8B" StrokeThickness="0" Padding="12,10" StrokeShape="RoundRectangle 8" HeightRequest="50" Margin="0,10,0,0">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding BackCommand}"/>
                </Border.GestureRecognizers>
                <HorizontalStackLayout Spacing="8" HorizontalOptions="Center" VerticalOptions="Center">
                    <Label Text="{x:Static icons:MaterialIcons.ArrowBack}" FontFamily="MaterialIconsRegular" FontSize="18" TextColor="White" VerticalOptions="Center"/>
                    <Label Text="Back to Dashboard" TextColor="White" FontSize="14" VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
