<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:GUI.CliniCore.ViewModels.Patients"
             xmlns:shared="clr-namespace:GUI.CliniCore.Views.Shared"
             x:Class="GUI.CliniCore.Views.Patients.CreatePatientPage"
             x:DataType="viewModels:CreatePatientViewModel"
             Title="{Binding Title}">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding CancelCommand}"/>
    </Shell.BackButtonBehavior>

    <ScrollView Padding="15">
        <VerticalStackLayout Spacing="15">

            <!-- Account Credentials Section -->
            <Border Stroke="#2196F3" StrokeThickness="2" Background="#E3F2FD" StrokeShape="RoundRectangle 8" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Account Credentials" FontSize="16" FontAttributes="Bold" TextColor="#1976D2"/>

                    <!-- Username -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Username *" FontSize="14" FontAttributes="Bold" TextColor="#666"/>
                        <Entry Text="{Binding Username}"
                               Placeholder="Enter username"
                               TextColor="#333"
                               PlaceholderColor="#999"/>
                    </VerticalStackLayout>

                    <!-- Password -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Password *" FontSize="14" FontAttributes="Bold" TextColor="#666"/>
                        <Entry Text="{Binding Password}"
                               Placeholder="Enter password (min 6 characters)"
                               IsPassword="True"
                               TextColor="#333"
                               PlaceholderColor="#999"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Common Profile Information Section (CommonEntryType) -->
            <Border Stroke="#4CAF50" StrokeThickness="2" Background="#E8F5E9" StrokeShape="RoundRectangle 8" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Personal Information" FontSize="16" FontAttributes="Bold" TextColor="#388E3C"/>

                    <!-- Name -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Full Name *" FontSize="14" FontAttributes="Bold" TextColor="#666"/>
                        <Entry Text="{Binding Name}"
                               Placeholder="Enter patient's full name"
                               TextColor="#333"
                               PlaceholderColor="#999"/>
                    </VerticalStackLayout>

                    <!-- Address -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Address *" FontSize="14" FontAttributes="Bold" TextColor="#666"/>
                        <Entry Text="{Binding Address}"
                               Placeholder="Enter address"
                               TextColor="#333"
                               PlaceholderColor="#999"/>
                    </VerticalStackLayout>

                    <!-- Birth Date -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Birth Date *" FontSize="14" FontAttributes="Bold" TextColor="#666"/>
                        <DatePicker Date="{Binding BirthDate}"
                                   MinimumDate="1900-01-01"
                                   TextColor="#333"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Patient-Specific Information Section (PatientEntryType) -->
            <Border Stroke="#FF9800" StrokeThickness="2" Background="#FFF3E0" StrokeShape="RoundRectangle 8" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Medical Demographics" FontSize="16" FontAttributes="Bold" TextColor="#F57C00"/>

                    <!-- Gender -->
                    <shared:StyledPicker LabelText="Gender"
                                         IsRequired="True"
                                         ItemsSource="{Binding GenderOptions}"
                                         SelectedItem="{Binding SelectedGender}"/>

                    <!-- Race -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Race/Ethnicity *" FontSize="14" FontAttributes="Bold" TextColor="#666"/>
                        <Entry Text="{Binding Race}"
                               Placeholder="Enter race/ethnicity"
                               TextColor="#333"
                               PlaceholderColor="#999"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Required Fields Note -->
            <Label Text="* Required fields"
                   FontSize="12"
                   TextColor="Gray"
                   Margin="0,10,0,0"/>

            <!-- Action Buttons -->
            <VerticalStackLayout Spacing="10" Margin="0,20,0,0">

                <Button Text="Create Patient"
                        Command="{Binding SaveCommand}"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        CornerRadius="8"
                        HeightRequest="50"/>

                <Button Text="Cancel"
                        Command="{Binding CancelCommand}"
                        BackgroundColor="#607D8B"
                        TextColor="White"
                        CornerRadius="8"
                        HeightRequest="50"/>

            </VerticalStackLayout>

            <!-- Validation Errors -->
            <CollectionView ItemsSource="{Binding ValidationErrors}"
                           IsVisible="{Binding HasValidationErrors}"
                           Margin="0,10,0,0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="#F44336"
                                StrokeThickness="1"
                                Background="#FFEBEE"
                                StrokeShape="RoundRectangle 8"
                                Padding="10"
                                Margin="0,2">
                            <Label Text="{Binding .}"
                                   TextColor="#D32F2F"
                                   FontSize="12"/>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
