<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:GUI.CliniCore.ViewModels"
             x:Class="GUI.CliniCore.Views.AppointmentDetailPage"
             x:DataType="viewModels:AppointmentDetailViewModel"
             Title="{Binding Title}">

    <!-- Configure Shell back button to trigger Back command -->
    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding BackCommand}"/>
    </Shell.BackButtonBehavior>

    <ScrollView Padding="15">
        <VerticalStackLayout Spacing="15">

            <!-- Appointment ID Header -->
            <Border Stroke="#2196F3" StrokeThickness="2" Background="#E3F2FD" StrokeShape="RoundRectangle 8" Padding="15">
                <Label Text="{Binding AppointmentInfo}"
                       FontSize="13"
                       TextColor="#1976D2"
                       FontAttributes="Bold"/>
            </Border>

            <!-- Appointment Info Card -->
            <Border Stroke="LightGray" StrokeThickness="1" Background="White" StrokeShape="RoundRectangle 8" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Appointment Information" FontSize="16" FontAttributes="Bold" TextColor="#333"/>

                    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="120,*" RowSpacing="8">

                        <Label Grid.Row="0" Grid.Column="0" Text="Patient:" FontAttributes="Bold" TextColor="#666" FontSize="13"/>
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding PatientName}" TextColor="#333" FontSize="13"/>

                        <Label Grid.Row="1" Grid.Column="0" Text="Physician:" FontAttributes="Bold" TextColor="#666" FontSize="13"/>
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding PhysicianName}" TextColor="#333" FontSize="13"/>

                        <Label Grid.Row="2" Grid.Column="0" Text="Date/Time:" FontAttributes="Bold" TextColor="#666" FontSize="13"/>
                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding StartTime}" TextColor="#333" FontSize="13"/>

                        <Label Grid.Row="3" Grid.Column="0" Text="Duration:" FontAttributes="Bold" TextColor="#666" FontSize="13"/>
                        <Label Grid.Row="3" Grid.Column="1" Text="{Binding Duration}" TextColor="#333" FontSize="13"/>

                        <Label Grid.Row="4" Grid.Column="0" Text="Status:" FontAttributes="Bold" TextColor="#666" FontSize="13"/>
                        <Border Grid.Row="4" Grid.Column="1"
                                BackgroundColor="{Binding StatusColor}"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 10"
                                Padding="8,4"
                                HorizontalOptions="Start">
                            <Label Text="{Binding Status}"
                                   TextColor="White"
                                   FontSize="12"
                                   FontAttributes="Bold"/>
                        </Border>

                        <Label Grid.Row="5" Grid.Column="0" Text="Reason:" FontAttributes="Bold" TextColor="#666" FontSize="13"/>
                        <Label Grid.Row="5" Grid.Column="1" Text="{Binding Reason}" TextColor="#333" FontSize="13"/>

                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- Notes Section -->
            <Border Stroke="LightGray" StrokeThickness="1" Background="White" StrokeShape="RoundRectangle 8" Padding="15">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Notes" FontSize="16" FontAttributes="Bold" TextColor="#333"/>
                    <Label Text="{Binding Notes}"
                           FontSize="14"
                           TextColor="#666"
                           LineHeight="1.3"/>
                </VerticalStackLayout>
            </Border>

            <!-- Action Buttons -->
            <VerticalStackLayout Spacing="10" Margin="0,10,0,0">

                <Button Text="Reschedule Appointment"
                        Command="{Binding RescheduleCommand}"
                        BackgroundColor="#2196F3"
                        TextColor="White"
                        CornerRadius="8"
                        HeightRequest="50"
                        IsVisible="{Binding CanReschedule}"/>

                <Button Text="Cancel Appointment"
                        Command="{Binding CancelCommand}"
                        BackgroundColor="#F44336"
                        TextColor="White"
                        CornerRadius="8"
                        HeightRequest="50"
                        IsVisible="{Binding CanCancel}"/>

                <Button Text="â† Back to List"
                        Command="{Binding BackCommand}"
                        BackgroundColor="#607D8B"
                        TextColor="White"
                        CornerRadius="8"
                        HeightRequest="50"/>

            </VerticalStackLayout>

            <!-- Validation Errors/Messages -->
            <CollectionView ItemsSource="{Binding ValidationErrors}"
                           IsVisible="{Binding HasValidationErrors}"
                           Margin="0,10,0,0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="#4CAF50"
                                StrokeThickness="1"
                                Background="#E8F5E9"
                                StrokeShape="RoundRectangle 8"
                                Padding="10"
                                Margin="0,2">
                            <Label Text="{Binding .}"
                                   TextColor="#2E7D32"
                                   FontSize="12"/>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
