<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GUI.CliniCore.Views.Shared.ListItemCard">
    <Border x:Name="CardBorder"
            Stroke="LightGray"
            StrokeThickness="1"
            Background="White"
            Padding="15"
            Margin="0,5">
        <Border.StrokeShape>
            <RoundRectangle x:Name="BorderShape" CornerRadius="8"/>
        </Border.StrokeShape>
        <Border.GestureRecognizers>
            <TapGestureRecognizer x:Name="CardTapGesture" Tapped="OnCardTapped"/>
        </Border.GestureRecognizers>
        <Grid x:Name="ContentGrid" ColumnDefinitions="*,Auto" ColumnSpacing="10">
            <!-- Main Content Area (Left) -->
            <ContentView x:Name="MainContentArea" Grid.Column="0"/>
            <!-- Action Content Area (Right) -->
            <ContentView x:Name="ActionContentArea" Grid.Column="1" VerticalOptions="Center"/>
        </Grid>
    </Border>
</ContentView>
