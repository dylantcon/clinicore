<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GUI.CliniCore.Views.Shared.ValidationErrorBox">
    <Frame x:Name="ErrorFrame"
           IsVisible="{Binding Source={x:Reference ErrorFrame}, Path=BindingContext.HasErrors, FallbackValue=False}"
           BackgroundColor="#FFF3CD"
           BorderColor="#856404"
           Padding="15"
           CornerRadius="8"
           HasShadow="False"
           Margin="0,0,0,10">
        <Label x:Name="ErrorLabel"
               TextColor="#856404"
               FontSize="14"
               LineBreakMode="WordWrap"/>
    </Frame>
</ContentView>
