<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GUI.CliniCore.Views.Shared.StatusBadge">
    <Border x:Name="BadgeBorder"
            StrokeThickness="0"
            Padding="10,4">
        <Border.StrokeShape>
            <RoundRectangle x:Name="BorderShape" CornerRadius="10"/>
        </Border.StrokeShape>
        <Label x:Name="BadgeLabel"
               FontSize="12"
               FontAttributes="Bold"
               VerticalOptions="Center"
               HorizontalOptions="Center"/>
    </Border>
</ContentView>
