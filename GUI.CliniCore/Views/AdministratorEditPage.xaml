<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:GUI.CliniCore.ViewModels"
             x:Class="GUI.CliniCore.Views.AdministratorEditPage"
             x:DataType="viewModels:AdministratorEditViewModel"
             Title="{Binding Title}">

    <!-- Configure Shell back button to trigger Cancel command -->
    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding CancelCommand}"/>
    </Shell.BackButtonBehavior>

    <ScrollView Padding="15">
        <VerticalStackLayout Spacing="15">

            <!-- Username (Create Only) -->
            <VerticalStackLayout Spacing="5" IsVisible="{Binding IsPasswordVisible}">
                <Label Text="Username *" FontSize="14" FontAttributes="Bold" TextColor="#666"/>
                <Entry Text="{Binding Username}"
                       Placeholder="Enter username (min 3 characters)"
                       IsEnabled="{Binding IsPasswordVisible}"/>
            </VerticalStackLayout>

            <!-- Password (Create Only) -->
            <VerticalStackLayout Spacing="5" IsVisible="{Binding IsPasswordVisible}">
                <Label Text="Password *" FontSize="14" FontAttributes="Bold" TextColor="#666"/>
                <Entry Text="{Binding Password}"
                       Placeholder="Enter password (min 6 characters)"
                       IsPassword="True"
                       IsEnabled="{Binding IsPasswordVisible}"/>
            </VerticalStackLayout>

            <!-- Name -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Full Name *" FontSize="14" FontAttributes="Bold" TextColor="#666"/>
                <Entry Text="{Binding Name}"
                       Placeholder="Enter full name"/>
            </VerticalStackLayout>

            <!-- Address -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Address" FontSize="14" FontAttributes="Bold" TextColor="#666"/>
                <Entry Text="{Binding Address}"
                       Placeholder="Enter address (optional)"/>
            </VerticalStackLayout>

            <!-- Birth Date -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Birth Date" FontSize="14" FontAttributes="Bold" TextColor="#666"/>
                <DatePicker Date="{Binding BirthDate}"
                           MinimumDate="1900-01-01"/>
            </VerticalStackLayout>

            <!-- Email -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Email" FontSize="14" FontAttributes="Bold" TextColor="#666"/>
                <Entry Text="{Binding Email}"
                       Placeholder="Enter email address (optional)"
                       Keyboard="Email"/>
            </VerticalStackLayout>

            <!-- Required Fields Note -->
            <Label Text="* Required fields"
                   FontSize="12"
                   TextColor="Gray"
                   Margin="0,10,0,0"/>

            <!-- Action Buttons -->
            <VerticalStackLayout Spacing="10" Margin="0,20,0,0">

                <Button Text="{Binding Title}"
                        Command="{Binding SaveCommand}"
                        BackgroundColor="#F44336"
                        TextColor="White"
                        CornerRadius="8"
                        HeightRequest="50"/>

                <Button Text="Cancel"
                        Command="{Binding CancelCommand}"
                        BackgroundColor="#607D8B"
                        TextColor="White"
                        CornerRadius="8"
                        HeightRequest="50"/>

            </VerticalStackLayout>

            <!-- Validation Errors -->
            <CollectionView ItemsSource="{Binding ValidationErrors}"
                           IsVisible="{Binding HasValidationErrors}"
                           Margin="0,10,0,0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="#F44336"
                                StrokeThickness="1"
                                Background="#FFEBEE"
                                StrokeShape="RoundRectangle 8"
                                Padding="10"
                                Margin="0,2">
                            <Label Text="{Binding .}"
                                   TextColor="#D32F2F"
                                   FontSize="12"/>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
